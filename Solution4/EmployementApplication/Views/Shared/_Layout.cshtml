<!DOCTYPE html>
<html ng-app="MyApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    @if (Request.IsAuthenticated && (@User.Identity.Name.Equals("vishal@gmail.com")))
                    {
                        <div style="color:white" class="navbar-brand">Administrator</div>
                    }
                    else if (Request.IsAuthenticated && (@User.Identity.Name != "vishal@gmail.com"))
                    {
                        <div style="color:white" class="navbar-brand">@User.Identity.Name</div>
                    }
                    else
                    {
                        <div style="color:white" class="navbar-brand">Welcome</div>
                    }
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
          @if (Request.IsAuthenticated && (@User.Identity.Name.Equals("vishal@gmail.com")))
          {
            <div ng-controller="OwinController" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#Employees" id="EmpLink">Employees</a></li>
                    <li><a href="#Departments" id="DeptLink">Departments</a></li>
                    <li><a href="/Home/Logout" id="LogoutLink">Logout</a></li>
                    @*<li><a href="" ng-click="Logout()" id="LogoutLink">Logout</a></li>*@

                </ul>
            </div>
          }
          else if (Request.IsAuthenticated && (@User.Identity.Name != "vishal@gmail.com"))
          {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/UserProfile" id="HomeLink">Details</a></li>        
                    <li><a href="#/Settings" id="SettingsLink">Settings</a></li>
                    <li><a href="/Home/Logout" id="LogoutLink">Logout</a></li>
                </ul>
            </div>


          }
          else
          {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li><a href="/#Register" id="RegisterLink">Register</a></li>*@
                    <li><a href="#/Login" id="LoginLink">Login</a></li>
                </ul>
            </div>
          }
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>
    <script src="~/Scripts/angular-cookies.min.js"></script>
    <script src="~/Scripts/angular-mocks.js"></script>
    <script src="~/AngularScripts/App/MyApp.js"></script>
    <script src="~/AngularScripts/App/Config.js"></script>
    <script src="~/AngularScripts/App/Services/EmployeeService.js"></script>
    <script src="~/AngularScripts/App/Controllers/EmployeeController.js"></script>
    <script src="~/AngularScripts/App/Services/DepartmentService.js"></script>
    <script src="~/AngularScripts/App/Controllers/DepartmentController.js"></script>
    <script src="~/AngularScripts/App/Directives/CheckBoxDirective.js"></script>
    <script src="~/AngularScripts/App/Services/LoginService.js"></script>
    <script src="~/AngularScripts/App/Controllers/OwinController.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>